<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.common.component.JCardViewPlus xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/qa_selector_quiz_type_text_default_select"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/qa_freshman_hot_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="15dp"
            android:text="入学考试"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/qa_freshman_hot_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="听说会有入学考试"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/qa_freshman_hot_item_title"
            app:layout_constraintTop_toBottomOf="@+id/qa_freshman_hot_item_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mredrock.cyxbs.common.component.JCardViewPlus>