<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_quiz_dialog_time_pick_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/qa_quiz_dialog_cancel"
        android:textColor="@color/qa_quiz_dialog_header_button_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_quiz_dialog_time_pick_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/qa_quiz_dialog_next"
        android:textColor="@color/qa_quiz_dialog_header_button_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_quiz_dialog_time_pick_cancel" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/qa_quiz_dialog_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_quiz_dialog_time_pick_next" />

    <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.QuizTimeNumberPicker
        android:id="@+id/tv_quiz_dialog_date_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_quiz_dialog_hour_pick"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider" />

    <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.QuizTimeNumberPicker
        android:id="@+id/tv_quiz_dialog_hour_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quiz_dialog_date_pick"
        app:layout_constraintEnd_toStartOf="@id/tv_quiz_dialog_minute_pick"
        app:layout_constraintStart_toEndOf="@id/tv_quiz_dialog_date_pick"
        app:layout_constraintTop_toTopOf="@+id/tv_quiz_dialog_date_pick" />

    <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.QuizTimeNumberPicker
        android:id="@+id/tv_quiz_dialog_minute_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quiz_dialog_date_pick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_quiz_dialog_hour_pick"
        app:layout_constraintTop_toTopOf="@+id/tv_quiz_dialog_date_pick" />
</androidx.constraintlayout.widget.ConstraintLayout>