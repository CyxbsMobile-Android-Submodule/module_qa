<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">

    <View
        android:id="@+id/view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="37dp">

        <FrameLayout
            android:id="@+id/fl_sort_by_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sort_by_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/qa_answer_list_sort_by_default"
                android:textColor="@color/qa_popup_window_sort_by_checked_color"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_checked_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/qa_ic_popup_window_sort_by_checked"
                android:visibility="invisible"
                tools:visibility="visible" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/qa_popup_window_sort_by_divider_color" />

        <FrameLayout
            android:id="@+id/fl_sort_by_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sort_by_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/qa_answer_list_sort_by_time"
                android:textColor="@color/qa_popup_window_sort_by_uncheck_color"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_checked_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/qa_ic_popup_window_sort_by_checked"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>