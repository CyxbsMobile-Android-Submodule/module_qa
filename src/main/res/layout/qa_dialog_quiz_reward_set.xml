<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="18dp"
    android:paddingBottom="25dp">

    <TextView
        android:id="@+id/tv_quiz_reward_set_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="@string/qa_quiz_dialog_cancel"
        android:textColor="@color/qa_quiz_dialog_header_button_color"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_quiz_reward_set_dialog_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="@string/qa_quiz_dialog_submit"
        android:textColor="@color/qa_quiz_dialog_header_button_color"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_quiz_reward_set_dialog_cancel"
        android:layout_marginTop="18dp"
        android:background="#26000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_divider"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_reward_set_my_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/qa_quiz_reward_set_my_reward_color"
            android:textSize="13sp"
            tools:text="积分剩余：20" />

        <TextView
            android:id="@+id/tv_reward_set_cur_question_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#7195fa"
            android:textSize="17sp"
            tools:text="1积分" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#26000000" />

        <LinearLayout
            android:id="@+id/ll_reward_tv_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.RewardSelectCheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                tools:checked="true"
                tools:text="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.RewardSelectCheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                tools:text="2" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.RewardSelectCheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                tools:text="3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.RewardSelectCheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                tools:text="5" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.RewardSelectCheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                tools:text="10" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.mredrock.cyxbs.qa.pages.quiz.ui.widget.RewardSelectCheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                tools:text="15" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>