<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context=".pages.main.QuestionContainerFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/transparentBackground"
        app:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingStart="15dp"
            android:paddingTop="31dp"
            android:paddingEnd="16dp"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.65"
                android:textColor="@color/qa_question_current_time_color"
                android:textSize="10sp"
                android:layout_gravity="top|start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_collapseMode="parallax"
                tools:ignore="SmallSp"
                tools:text="第十一周 周二" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/qa_fragment_head_title"
                android:textColor="@color/qa_main_title"
                app:layout_collapseMode="parallax"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_gravity="start|bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_current_time" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ask_question"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/qa_main_have_question_btn_background"
                android:gravity="center"
                android:text="@string/qa_fragment_head_give_question"
                android:textColor="@color/whiteFontColor"
                app:layout_collapseMode="parallax"
                android:textSize="15sp"
                android:layout_gravity="end|bottom"
                app:layout_constraintBottom_toBottomOf="@id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            app:tabBackground="@android:color/transparent"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/qa_question_tab_indicator_color"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="3dp"
            app:tabMode="fixed"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/qa_tab_selected_color"
            app:tabTextColor="@color/qa_tab_unselected_color" />

        <com.mredrock.cyxbs.common.component.JCardViewPlus
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tl_category"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/qa_question_list_color"
            app:cardCornerRadiusUpperLeft="22dp"
            app:cardCornerRadiusUpperRight="22dp"
            app:shadowColor="@color/qa_question_list_color"
            app:shadowRadius="0dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tl_category"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:overScrollMode="never" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
