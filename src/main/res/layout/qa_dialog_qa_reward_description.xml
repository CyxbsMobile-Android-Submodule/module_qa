<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/qa_dialog_notice_my_reward_not_enough_background"
    android:paddingStart="19dp"
    android:paddingTop="20dp"
    android:paddingEnd="19dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_reward_explain_list"
        android:layout_marginTop="27dp"
        android:layout_centerHorizontal="true"
        android:text="@string/qa_reward_description_bottom_text"
        android:textColor="@color/qa_dialog_qa_reward_description_bottom_text_color"
        android:textSize="11sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reward_explain_list"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:overScrollMode="never" />


</RelativeLayout>