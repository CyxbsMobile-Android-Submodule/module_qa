<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qa_dialog_notice_my_reward_not_enough_background">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/qa_ic_quiz_notice_reward_not_enough" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="积 分 不 够" />

    <TextView
        android:id="@+id/tv_notice_first_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="你的悬赏积分超过你拥有积分了"
        android:textColor="@color/levelFourFontColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_notice_second_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_notice_first_line"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="降低悬赏积分或者去赚取更多积分吧~"
        android:textColor="@color/levelFourFontColor"
        android:textSize="12sp" />
    <Button
        android:layout_width="92dp"
        android:layout_height="34dp"
        android:layout_below="@+id/tv_notice_second_line"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/qa_main_have_question_btn_background"
        android:text="@string/qa_quiz_dialog_sure"
        android:textSize="15sp"
        android:textColor="@color/whiteFontColor" />

</RelativeLayout>

