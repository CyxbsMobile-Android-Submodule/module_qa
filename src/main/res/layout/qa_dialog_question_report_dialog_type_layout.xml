<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBackground"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qa_question_report_divide_line_background_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_report_type_rubbish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="垃圾广告信息"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="19sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_report_type_useless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="无用提问"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="19sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_report_type_illegal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="煽动信息、造谣"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="19sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_report_type_infringement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="侵权信息"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="19sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_report_type_others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="其他"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="19sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_report_type_ignore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="屏蔽该问题"
        android:textColor="@color/buttonGradientStartColor"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btn_cancel_report"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/qa_main_have_question_btn_background"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/whiteFontColor"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="39dp"
        android:alpha="0.61"
        android:text="举报成功获得积分"
        android:textColor="@color/levelTwoFontColor"
        android:textSize="12sp" />
</LinearLayout>